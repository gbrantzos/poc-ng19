{
  "name": "poc",
  "version": "0.1.0",
  "description": "Proof Of Concept project",
  "scripts": {
    "ng": "ng",
    "prestart": "npm run build-info",
    "start": "ng serve",
    "start:mock-server": "npm-run-all -p start mock-server",
    "prebuild": "npm run build-info && npm run lint",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "npm run lint && ng test --no-watch",
    "test:watch": "ng test --browsers Chrome",
    "lint": "ng lint",
    "lint-fix": "ng lint --fix",
    "build-info": "ts-node --project tsconfig.ts-node.json scripts/prepare.build-info.ts",
    "prettier:all": "npx prettier --write .",
    "html-beautify:all": "npx js-beautify --type html -r ./**/*.html",
    "bump-version": "npx bump --commit \"Release v%s\" --tag \"v%s\"",
    "prepare": "husky",
    "pre-commit": "npx lint-staged",
    "mock-server": "npx mockoon-cli start --data ./mock-server/poc-ng19.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.4",
    "@angular/cdk": "^19.1.2",
    "@angular/common": "^19.1.4",
    "@angular/compiler": "^19.1.4",
    "@angular/core": "^19.1.4",
    "@angular/forms": "^19.1.4",
    "@angular/material": "^19.1.2",
    "@angular/platform-browser": "^19.1.4",
    "@angular/platform-browser-dynamic": "^19.1.4",
    "@angular/router": "^19.1.4",
    "@ngrx/signals": "^19.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.1.5",
    "@angular/cli": "^19.1.5",
    "@angular/compiler-cli": "^19.1.4",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@mockoon/cli": "^9.1.0",
    "@phosphor-icons/web": "^2.1.1",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "19.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "git-describe": "^4.1.1",
    "husky": "^9.1.7",
    "jasmine-core": "~5.4.0",
    "js-beautify": "^1.15.1",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-verbose-reporter": "^0.0.8",
    "lint-staged": "^15.3.0",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.4.49",
    "prettier": "3.4.2",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "8.18.0",
    "version-bump-prompt": "^6.1.0"
  }
}
